#include <iostream>
using namespace std;

int main() {
    int num;
    
    cout << "Enter a number: ";
    cin >> num;

    // First if statement
    if (num != 0) {
        cout << "The number is not zero." << endl;
    }

    // If-else statement
    if (num > 0) {
        cout << "The number is positive." << endl;
    } else {
        cout << "The number is negative." << endl;
    }

    return 0;
}
